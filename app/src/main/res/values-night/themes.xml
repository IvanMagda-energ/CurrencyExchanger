<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyExchanger" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/appToolbarStyle</item>
        <item name="android:textViewStyle">@style/tV</item>
    </style>

    <style name="appToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Surface</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonOval" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:minWidth">130dp</item>
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_oval_button</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="tV">
        <item name="titleTextColor">?attr/colorOnSecondary</item>
    </style>
</resources>